page{
    background-color: #ededed;
}
.content{
    padding-bottom: 130rpx;
}
.user {
    overflow: hidden;
    background-color: #fff;
}
.left {
    height: 120rpx;
    width: 120rpx;
    float: left;
}
.photo {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.center {
    width: 60%;
    float: left;
    margin-left: 20rpx;
}
.title {
    font-size: 32rpx;
    color: #95c517;
}
.name {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}
.address {
    color: #999;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.other {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}
.other > view {
    display: inline-block;
}
.right {
    float: left;
    width: calc(100% - 60% -120rpx);
}
.btn {
    width: 120rpx;
    height: 60rpx;
    background-color: #ff4e00;
    color: #fff;
    font-size: 28rpx;
    float: right;
    margin-top: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 60rpx;
}
.bottom {
    display: flex;
    padding-top: 20rpx;
}
.b-item {
    flex: 1;
    text-align: center;
    border-right: 1px solid #eeeeee;
}
.b-item:last-child {
    border: none;
}
.bi-info {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 8rpx;
}
.bi-title {
    color: #999;
    font-size: 28rpx;
}
.user{
    padding: 30rpx;
}
.btns{
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
    padding: 20rpx;
}
.btn1{
    height: 60rpx;
    width: 164rpx;
    border: 2rpx solid #ff4e00;
    border-radius: 30rpx;
    text-align: center;
    line-height: 60rpx;
    color:  #ff4e00;
}
.section{
    margin-top: 20rpx;
}
.item{
    border-bottom: 2rpx solid #ededed;
    padding: 20rpx 30rpx;
    font-size: 28rxp;
    color: #666;
    background-color: #fff;
    position: relative;
}
.item>view{
    display: inline-block;
}
.item>view>view{
    line-height: 60rpx;
}
.h44{
    width: 160rpx;
}
.block{
    display: block;
}
.mark{
    color:#ff4e00;
}
.bg-img{
    position: absolute;
    top: calc(50% - 16rpx);
    right: 30rpx;
    width: 32rpx;
    height: 32rpx;
}
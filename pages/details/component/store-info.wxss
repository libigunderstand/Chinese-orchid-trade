.user-content {
    position: relative;
    background-color: #fff;
}
.bg {
    position: absolute;
    height: 250rpx;
    width: 100%;
    background: url(https://static.hmlan.com/h5/img/shopBg.png) no-repeat;
    filter: blur(0.3);
}
.wrapper {
    position: relative;
    width: 90%;
    max-width: 1180rpx;
    background-color: white;
    height: 312rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    border-radius: 10rpx;
    -moz-box-shadow: 2rpx 2rpx 10rpx #d8d0d0;
    box-shadow: 2rpx 2rpx 10rpx #d8d0d0;
    padding: 25rpx 16rpx 0;
}
.user {
    overflow: hidden;
}
.left {
    height: 120rpx;
    width: 120rpx;
    float: left;
}
.photo {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.center {
    width: 60%;
    float: left;
    margin-left: 20rpx;
}
.title {
    font-size: 32rpx;
    color: #95c517;
}
.name {
    font-size: 28rpx;
    color: #666;
    margin-top: 10rpx;
}
.address{
    color: #999;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.other{
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}
.other>view{
    display: inline-block;
}
.right {
    float: left;
    width: calc(100% - 60% -120rpx);
}
.btn{
    width: 120rpx;
    height: 60rpx;
    background-color: #ff4e00;
    color: #fff;
    font-size: 28rpx;
    float: right;
    margin-top:80rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 60rpx;
}
.bottom{
display: flex;
padding-top: 20rpx;
}
.b-item{
    flex: 1;
    text-align: center;
    border-right: 1px solid #eeeeee;
}
.b-item:last-child{
    border: none;
}
.bi-info{
    font-size: 30rpx;
    color:#333;
    margin-bottom: 8rpx;
}
.bi-title{
    color: #999;
    font-size: 28rpx;
}
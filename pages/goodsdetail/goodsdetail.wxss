/* pages/goodsdetail/goodsdetail.wxss */
.detailWrap {
  width: 100%;
  height: 100%;
  position: relative;
}
.foot {
  width: 100%;
  height: 120rpx;
  position: fixed;
  z-index: 999;
  bottom: 0;
  left: 0;
  border: 1rpx solid #ccc;
  display: flex;
}
.buttons {
  width: 39%;
  display: flex;
  padding: 6rpx 0;
}
.btn-item {
  width: 33.33%;
  text-align: center;
  font-size: 52rpx;
  display: flex;
  flex-direction: column;
  vertical-align: baseline;
}
.iconfont {
  color: #666;
}
.btn-item text {
  color: #666;
  font-size: 22rpx;
  line-height: 40rpx;
}
.buy {
  width: 57%;
  height: 80rpx;
  display: flex;
  text-align: center;
  border-radius: 40rpx;
  overflow: hidden;
  margin: 14rpx 0 0 2%;
}
.gobuy {
  width: 50%;
  height: 80rpx;
  background: linear-gradient(to right, #FFB400, #FFB400) !important;
  color: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
}
.talkbuy {
  width: 50%;
  height: 80rpx;
  background: linear-gradient(to right, #FF0A0A, #FF0A0A) !important;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
}
.slider {
  position: relative;
}
swiper {
  height: 640rpx;
  overflow: hidden;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.top {
  position: absolute;
  top: 30rpx;
  z-index: 1000;
  width: 100%;
}
.backWrap {
  background-color: rgba(0,0,0,.5);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: inline-block;
  text-align: center;
  color: #fff;
  margin-left: 30rpx;
  line-height: 70rpx;
}
.msgWrap {
  float: right;
  background-color: rgba(0,0,0,.5);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: inline-block;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  margin-right: 30rpx;
}
.slider-num {
  display: block;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background: rgba(0,0,0,.5);
  color: #fff;
  font-size: 32rpx;
  padding: 4rpx 14rpx;
  border-radius: 10rpx;
  z-index: 999;
}
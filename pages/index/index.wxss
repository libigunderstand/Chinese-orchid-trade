/**index.wxss**/
@import "../../resources/styles/iconfont.wxss";
.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.top {
  position: fixed;
  height: 86rpx;
  top: 0;
  background: hsl(77, 77%, 44%);
  width: 100%;
  z-index: 9999;
  background-color: "#95c519";
  display: flex;
}
scroll-view {
  height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
}
.download {
  width: 100rpx;
  height: 86rpx;
}
.down {
  display: block;
  width: 56rpx;
  height: 56rpx;
  margin: 16rpx auto 0;
}
.searchWrap {
  font-weight: 400;
  background-color: #fff;
  border-radius: 30rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #999;
  width: calc(100% - 110rpx);
  margin: 12rpx 0;
  line-height: 60rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
}
.text {
  margin: 0 auto;
  display: flex;
  align-items: center;
}
.sousuo {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.message {
  width: 120rpx;
  height: 86rpx;
}
.msg {
  display: block;
  width: 56rpx;
  height: 60rpx;
  margin: 12rpx auto 0;
}
swiper {
  width: 100%;
  height: 300rpx;
}
swiper-item  > image {
  display: block;
  width: 100%;
  height: 300rpx;
}
.block-border {
  width: 100%;
  margin-top: -32rpx;
  background: #fff;
  border: 1rpx solid #eee;
}
.recommend {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend > .gopage {
  width: 25%;
  height: 180rpx;
  font-size: 28rpx;
  text-align: center;
}
.recommend > .gopage > image {
  width: 92rpx;
  height: 92rpx;
  margin: 0 auto;
}
.recommend > .gopage > span {
  display: block;
  margin-top: 14rpx;
  color: #666;
}
.adv {
  background: #ededed;
  width: 100%;
  height: 218.78rpx;
  padding-top: 30rpx;
}
.adv-image  {
  width: 94%;
  height: 100%;
  border-radius: 20rpx;
  margin-left: 3%;
}
.kinds {
  width: 100%;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0 0;
  background: #ededed;
}
.tit {
  height: 54rpx;
  background: #ededed;
}
.tit > image {
  display: block;
  width: 50%;
  height: 30.6rpx;
  margin: 24rpx auto;
}
.kind-list {
  width: 100%;
  background: #ededed;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.kindWrap {
  width: 50%;
  height: 140rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.kindWrap_ {
  width: calc(33.333% - 1rpx);
  height: 112rpx;
  background: #fff;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}
.kindWrap:nth-child(n+1) {
  width: calc(50% - 1rpx);
  border-right: 1rpx solid #eee;
}
.kindWrap_:nth-child(3n) {
  width: 33.333%;
  border-right: none;
}
.list-wrapper {
  padding: 26rpx 0;
  display: flex;
  flex-direction: row;
}
.list-wrap_ {
  padding: 16rpx 16rpx 0 16rpx;
  display: flex;
  flex-direction: row;
}
.kind-tu {
  width: 42%;
  text-align: center;
}
.kind-tu > image {
  border-radius: 10rpx;
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto;
}
.introduce {
  display: flex;
  flex-direction: column;
}
.introduce_ {
  font-size: 32rpx;
  margin: 16rpx 16rpx 0 28rpx;
}
.t1 {
  margin-top: 4rpx;
  color: #666;
  font-size: 30rpx;
}
.t2 {
  margin-top: 1rpx;                       
  color: #999;
  font-size: 24rpx; 
}
.panel-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #ededed;
  padding: 20rpx;
  margin-left: -20rpx;
  justify-content: space-around;
}
.viewGoods {
  width: calc(50% - 20rpx);
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.panel-wrapper{
  width: 100%;
  background: #fff;
  position: relative;
}
.panel-tu{
  width: 100%;
  overflow: hidden;
}
.panel-tu image {
  width: 360rpx;
  height: 360rpx;
  border-radius: 10rpx;
}
.panel-h4 {
    position: relative;
    width: 100%;
    padding-top: 14rpx;
    padding-bottom: 16rpx;
}
.panel-title{
  font-weight: 400;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: break-word;
  word-break: break-all;
  padding: 0 18rpx;
  color: #666;
}
.panel-price{
  padding: 10rpx 18rpx 10rpx 10rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #f60000;
}
.panel-desc{
  padding: 0 18rpx 6rpx;
  vertical-align: middle;
}
.c9{
  color: #999;
}
.panel-hummer{
  background: #fcf6e2;
  border-radius: 4rpx;
  padding: 6rpx 10rpx;
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  text-align: center;
  font-size: 18rpx;
  color: #887942;
}
.hummer-num{
  display: block;
  font-size: 36rpx;
  line-height: 36rpx;
}
.price{
  font-size: 20rpx;
}
.bottom {
  margin: 0 auto;
  font-size: 28rpx;
  text-align: center;
  background: #eee;
  padding-bottom: 14rpx;
}
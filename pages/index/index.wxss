/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
}
.top {
  position: sticky;
  height: 43px;
  background: hsl(77, 77%, 44%);
  top: 0;
  width: 100%;
  z-index: 9999;
  background-color: "#95c519";
  display: flex;
}
.download {
  width: 50px;
  height: 43px;
}
.down {
  width: 28px;
  height: 28px;
  margin: 8px auto 0;
}
.searchWrap {
  font-weight: 400;
  background-color: #fff;
  border-radius: 15px;
  height: 30px;
  font-size: 14px;
  color: #999;
  width: calc(100% - 110px);
  margin: 6px 0;
  line-height: 30px;
  opacity: 0.9;
  display: flex;
  align-items: center;
}
.text {
  margin: 0 auto;
  display: flex;
  align-items: center;
}
.sousuo {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}
.message {
  width: 60px;
  height: 43px;
}
.msg {
  width: 28px;
  height: 30px;
  margin: 6px auto 0;
}
.block-border {
  width: 100%;
  margin-top: -16px;
  background: #fff;
  border: 1px solid #eee;
}
.recommend {
  width: 100%;
  margin-top: 25px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}
.recommend > .gopage {
  min-width: 92px;
  height: 90px;
  font-size: 14px;
  text-align: center;
}
.recommend > .gopage > cover-image {
  width: 46px;
  height: 46px;
  margin: 0 auto;
}
.recommend > .gopage > span {
  display: block;
  margin-top: 7px;
  color: #666;
}
.adv {
  background: #ededed;
  width: 100%;
  margin: -6px auto 0;
  padding-top: 15px;
}
.adv > cover-image {
  display: block;
  width: 94%;
  height: 100%;
  margin: 0 auto;
  border-radius: 10px;
}
.kinds {
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 10px 0 0;
  background: #ededed;
}
.tit {
  background: #ededed;
}
.tit > cover-image {
  display: block;
  width: 50%;
  height: 100%;
  margin: 12px auto;
}
.kind-list {
  width: 100%;
  background: #ededed;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.kindWrap {
  min-width: 50%;
  height: 70px;
  background: #fff;
  border-bottom: 1px solid #eee;
}
.kindWrap_ {
  min-width: calc(33.333% - 1px);
  height: 56px;
  background: #fff;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.kindWrap:nth-child(n+1) {
  min-width: calc(50% - 1px);
  border-right: 1px solid #eee;
}
.kindWrap_:nth-child(3n) {
  min-width: 33.333%;
  border-right: none;
}
.list-wrapper {
  padding: 13px 0;
  display: flex;
  flex-direction: row;
}
.list-wrap_ {
  padding: 8px 8px 0 8px;
  display: flex;
  flex-direction: row;
}
.kind-tu {
  width: 42%;
  text-align: center;
}
.kind-tu > cover-image {
  border-radius: 5px;
  width: 42px;
  height: 42px;
  margin: 0 auto;
}
.introduce {
  display: flex;
  flex-direction: column;
}
.introduce_ {
  margin: 8px 8px 0 14px;
}
.t1 {
  margin-top: 2px;
  color: #666;
  font-size: 15px;
}
.t2 {
  margin-top: 1px;                       
  color: #999;
  font-size: 12px; 
}
/* pages/search/search.wxss */
.top {
  position: fixed;
  height: 86rpx;
  top: 0;
  background: hsl(77, 77%, 44%);
  width: 100%;
  z-index: 9999;
  background-color: "#95c519";
  display: flex;
}
.search {
  position: relative;
  background: #fff;
  height: 60rpx;
  border: 0;
  color: #999;
  width: 80%;
  margin: 12rpx 0 12rpx 30rpx;
  border-radius: 32rpx;
  opacity: 0.9;
  overflow: hidden;
  display: flex;
  padding: 0 20rpx 0 0;
}
.sousuo{
  display: block;
  padding: 16rpx 18rpx;
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.textInput {
  width: calc(100% - 32rpx);
  border: 0;
  background: #fff;
  height: 60rpx;
  color: #999;
  font-size: 28rpx;
}
.message {
  margin-top: 12rpx;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  color: white;
  font-size: 32rpx;
}
.tab {
  width: 100%;
  margin-top: 84rpx;
}
.tabList {
  width: 100%;
  display: flex;
  height: 76rpx;
}
.tab-item {
  color: #666;
  width: 50%;
  text-align: center;
  border-bottom: 1px solid #eee;
  padding: 12rpx 0;
  font-size: 30rpx;
  line-height: 52rpx;
  transition: .3s;
}
.active {
  color: #7ca908;
  width: 50%;
  text-align: center;
  border-bottom: 2px solid #7ca908;
  padding: 12rpx 0;
  font-size: 30rpx;
  line-height: 52rpx;
}
.tip {
  font-size: 32rpx;
  color: #666;
  padding: 20rpx 30rpx;
}
.tabContent {
  padding: 20rpx 30rpx;
}
.tagList {
  padding: 0 30rpx;
}
.tag-item {
  border: 1px solid #eee;
  border-radius: 24rpx;
  padding: 1px 20rpx;
  color: #999;
  float: left;
  margin: 0 20rpx 16rpx 0;
  font-size: 26rpx;
}